{% extends 'base.html.twig' %}

{% block body %}
<center>
    <!-- ======= Contact Section ======= -->
    <section id="contact" class="contact section-bg" >

      <div class="container">

       <div class="col-lg-12">
            <form action="" method="POST" role="form" class="php-email-form" >
              <div class="row">

              <div class="col-md-12 form-group mt-6 mt-md-3">
              <h3 >S'inscrire en tant que : </h3>
              <hr>
              </div>
    <form>
        <div class="col-md-12 form-group mt-6 mt-md-3">
        <input type="radio" id="etudiant" name="type" value="etudiant" checked>
        <label for="etudiant">Etudiant</label>
        </div>
        <br>
        <div class="col-md-12 form-group mt-6 mt-md-3">
        <input type="radio" id="entreprise" name="type" value="entreprise">
        <label for="entreprise">Entreprise</label>
        </div>
        <br>
        <div class="col-md-12 form-group mt-6 mt-md-3">
        <input type="radio" id="universite" name="type" value="universite">
        <label for="universite">Universit√©</label>
        </div>
        <br>
        <br><br>
        <div class="col-md-12 form-group mt-6 mt-md-3">
        <button type="button" onclick="redirect()" class="btn btn-success" style="background:rgb(23,121,53)">COMMENCER</button>
        </div>
    </form>

    <script>
        function redirect() {
            const type = document.querySelector('input[name="type"]:checked').value;
            if (type === 'etudiant') {
                window.location.href = '{{ path('register_etudiant') }}';
            } else if (type === 'entreprise') {
                window.location.href = '{{ path('register_entreprise') }}';
            } else if (type === 'universite') {
                window.location.href = '{{ path('register_universite') }}';
            }
        }
    </script>
{% endblock %}
