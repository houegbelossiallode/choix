{% extends 'base.html.twig' %}

{% block title %}Universite{% endblock %}

{% block body %}

<div id="layoutAuthentication">
 <div id="layoutAuthentication_content">
    <main>
    <div class="container">
     <div class="row justify-content-center">
         <div class="col-lg-5">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
             <div class="card-header"><h3 class="text-center font-weight-light my-4">Inscription</h3></div>
                <div class="card-body">
{% for flash_error in app.flashes('verify_email_error') %}
<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
{% endfor %}

        <h1>Inscription Universite</h1>
        {{ form_start(form) }}
        {{ form_row(form.image) }}
        {{ form_row(form.rccm) }}
        {{ form_row(form.nom) }}
        {{ form_row(form.num_enregistrement) }}
        {{ form_row(form.adresse) }}
        {{ form_row(form.email) }}
        {{ form_row(form.plainPassword, { label: 'Mot de passe' }) }}
        {{ form_rest(form) }}  

    
{% endblock %}

      