{% extends 'base.html.twig' %}

{% block title %}Etudiant{% endblock %}



{% block body %}
   
<div id="layoutAuthentication">
 <div id="layoutAuthentication_content">
    <main>
    <div class="container">
     <div class="row justify-content-center">
         <div class="col-lg-5">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
             <div class="card-header"><h3 class="text-center font-weight-light my-4">Inscription</h3></div>
                <div class="card-body">

{% for flash_error in app.flashes('verify_email_error') %}
<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
{% endfor %}
  
    <h1>Inscription Etudiant</h1>

    {{ form_start(registrationForm) }}
    {{ form_row(registrationForm.image) }}
    {{ form_row(registrationForm.nom) }}
    {{ form_row(registrationForm.prenom) }}
    {{ form_row(registrationForm.filiere) }}
    {{ form_row(registrationForm.sexe,{'attr': {'class': 'form-control'}}) }}
    {{ form_row(registrationForm.date_naissance) }}
    {{ form_row(registrationForm.adresse) }}
    {{ form_row(registrationForm.ecole) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
        {{ form_row(registrationForm.agreeTerms) }}

        
    {{ form_rest(registrationForm) }}




{% endblock %}
